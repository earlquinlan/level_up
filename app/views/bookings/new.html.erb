<div class="new-background">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <h1>Book A Course</h1>
      <div class="form-new">
        <%= simple_form_for [@course, @booking] do |f| %>
          <%= f.input :date, input_html: {class: "datepicker"} %>
          <%= f.button :submit, class: "create-course" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



