
<div class="background">
    <div class="search-results">

      <!-- <div class ="results-and-map"> -->

        <h4><strong>Results for:</strong> <em> " <%= params[:city] %> and <%= params[:category]  %> " </em></h4>
        <br>
        <div
          id="map"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>

      <!-- </div> -->
    <br>
    <br>
      <!-- <h6>RESULTS FOR: “COURSES IN BERLIN”</h6> -->

  <h4> <strong>Available Courses:</strong> </h4>
  <div class="cards">
    <% @courses.each do |course| %>
    <div class="card">
  <% if course.user.picture.attached?  %>
    <%= cl_image_tag course.picture.key, class: "card-img" %>
  <% end %>
  <% if course.user.picture.attached?  %>
    <%= cl_image_tag course.user.picture.key, class: "profile-img" %>
  <% end %>
  <!-- <img src="https://images.unsplash.com/photo-1537815749002-de6a533c64db?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1445&q=80" alt="profile image" class="profile-img"> -->
      <div class="card-trip-infos">
        <div>
          <h2 class="btn btn2"><%= link_to course.name, course_path(course) %></h2>
          <p><%= course.category %></p>
          <p><%= course.subtitle %></p>
        </div>
        <h4 class="card-trip-pricing"><%= course.price %>€</h4>
        <!-- <button class="btn btn1"> Book Now </button> -->
      </div>
     </div>
     <% end %>
  </div>

