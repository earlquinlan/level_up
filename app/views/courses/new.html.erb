<div class="new-background">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-4">
      <h1>Create a new Course</h1>
      <div class="form-new">
        <%= simple_form_for @course do |f| %>
          <%= f.input :name %>
          <%= f.input :category %>
          <%= f.input :price %>
          <%= f.input :city %>
          <%= f.input :description %>
          <%= f.button :submit, class: "create-course" %>
        <% end %>
      </div>
    </div>
  </div>
</div>



