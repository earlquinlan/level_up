<div class="background">

  <div class=edit-bio>
    <h4> <%= link_to ">> Edit Profile", edit_user_registration_path, class: "edit-bio" %></h4>
  </div>


  <div class="user-container d-flex justify-content-around">

    <div class="div-left">
      <div class="teacher-card-content">
        <div class="teacher-card-bio">

          <div>
            <%= cl_image_tag @user.picture.key, class: "profile-image" %>
          </div>
          <br><br>

          <div class="user-card">
            <h4> Name: <strong> <%= @user.name %> </strong> </h4>
            <h4> E-Mail: <strong> <%= @user.email %> </strong> </h4>
          </div>
          <br><br>

          <div class="add-course-button">
            <p class="add"> <%= link_to "CREATE COURSE", new_course_path, class: "add" %> </p>
          </div>
        </div>


        <br>
      </div>
    </div>

    <div class="div-right">

      <div class="div-bio">
        <h1><%= "Hello my name is #{@user.name} "%></h1>
        <h3> <%= @user.bio %></h3>
      </div>

      <br><br>

      <div class="div-upcoming">
        <h2>Upcoming courses</h2>

        <div class="div-upcoming-courses">
         <ul>
         <% @user.bookings.each do |booking| %>
        <li> <%= link_to booking.course.name, course_path(booking.course) %></li>
         <% end %>
         </ul>
      </div>


      </div>

    </div>


  </div>
</div>
